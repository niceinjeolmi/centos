#!/usr/bin/env python
#coding:utf8
import os
import sys

ROOT ="/project"

def checkRoot():
	"""
	/project 폴더가 존재하는지 체크한다
	"""
	global ROOT 
	if not os.path.exists(ROOT):
		return "/project 폴더가 존재하지 않습니다." % (ROOT)
	return None
	
def isProject(projectName):
	"""
	프로젝트가 이미 존재하는지 체크한다.
	"""
	global ROOT
	if os.path.exists("%s/%s" % (ROOT, projectName)):
		return "%s이미 존재하는 프로젝트 입니다." % (projectName)
	return None

def addProject(projectName):
	"""
	프로젝트를 생성하는 함수입니다.
	"""
	global ROOT
	subDirs = ["shot",
			"in",
			"out",
			"edit",
			"asset",
			"asset/char",
			"asset/shader",
			"config",
			"config/ocio",
			"config/thumbnail",
			"doc",
			"doc/concept"]
	for s in subDirs:
		p = "/".join([ROOT, projectName,s])
		os.makedirs(p)

def help():
	print "사용법"
	print "$ addproject projectName"

if __name__ == "__main__":
	#입력갯수 체크
	if len(sys.argv) != 2:
		help()
		sys.exit()
	projectName = sys.argv[1]
	
	#/project 존재 유무 체크
	err = checkRoot()
	if err:
		print err
		sys.exit()

	#/프로젝트가 이미 존재하는지 체크
	err = isProject(projectName)
	if err:
		print err
		sys.exit()
	
	#/프로젝트 하위 경로 생성
	addProject(projectName)
